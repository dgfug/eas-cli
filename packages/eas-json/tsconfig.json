{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "ES2020",
    "noImplicitReturns": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "../../node_modules/@types",
      "../../ts-declarations",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"]
}
